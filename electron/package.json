{
  "name": "greenie-desktop",
  "version": "1.0.0",
  "description": "Greenie Desktop - AI Assistant Overlay",
  "main": "main.js",
  "scripts": {
    "setup": "node setup-icon.js",
    "start": "npm run setup && electron .",
    "build:win": "npm run setup && electron-builder --win --x64",
    "build:mac": "npm run setup && electron-builder --mac",
    "build:linux": "npm run setup && electron-builder --linux"
  },
  "build": {
    "appId": "com.greensafeit.greenie",
    "productName": "Greenie",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "author": "Greensafe IT",
  "license": "MIT",
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-builder": "^26.5.0"
  }
}
